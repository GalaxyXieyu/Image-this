{
  "name": "imagine-this-nextjs",
  "version": "0.1.0",
  "description": "专业的 AI 图像处理平台，支持背景替换、图像扩展、高清化等功能",
  "author": "Imagine This Team",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev -p 23000",
    "build": "next build && node scripts/post-build.js",
    "start": "next start -p 34000",
    "lint": "next lint",
    "clean": "bash scripts/clean-build.sh",
    "electron:dev": "concurrently \"NODE_ENV=development npm run dev\" \"wait-on http://localhost:23000 && NODE_ENV=development electron .\"",
    "build:windows": "npm run clean && node scripts/build-windows.mjs --auto",
    "build:mac": "npm run clean && node scripts/build-mac.mjs"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^5.22.0",
    "@radix-ui/react-accordion": "^1.2.0",
    "@radix-ui/react-alert-dialog": "^1.1.1",
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-popover": "^1.1.1",
    "@radix-ui/react-progress": "^1.1.0",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.1",
    "@radix-ui/react-tooltip": "^1.1.4",
    "@tabler/icons-react": "^3.35.0",
    "@tailwindcss/postcss": "^4.1.10",
    "autoprefixer": "^10.4.21",
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "canvas": "^3.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "dotenv": "^17.2.3",
    "form-data": "^4.0.3",
    "fs": "^0.0.1-security",
    "konva": "^10.0.9",
    "lucide-react": "^0.462.0",
    "minio": "^8.0.5",
    "motion": "^12.23.24",
    "next": "15.3.4",
    "next-auth": "^4.24.7",
    "node-fetch": "^2.7.0",
    "path": "^0.12.7",
    "prisma": "^5.22.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.53.0",
    "react-konva": "^19.2.0",
    "react-rnd": "^10.5.2",
    "sharp": "^0.34.5",
    "sonner": "^1.5.0",
    "tailwind-merge": "^2.5.2",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "playwright": "^1.53.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.10",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.imaginethis.app",
    "productName": "ImagineThis",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      {
        "from": ".next",
        "to": ".next"
      },
      {
        "from": "public",
        "to": "public"
      },
      {
        "from": "prisma",
        "to": "prisma"
      },
      "package.json",
      ".env.production"
    ],
    "asar": false,
    "mac": {
      "category": "public.app-category.graphics-design",
      "icon": "public/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "executableName": "ImagineThis",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "electron/entitlements.mac.plist",
      "entitlementsInherit": "electron/entitlements.mac.plist"
    },
    "win": {
      "icon": "public/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "linux": {
      "icon": "public/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Graphics"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "artifactName": "${productName}-${version}-${arch}-Setup.${ext}"
    },
    "portable": {
      "artifactName": "${productName}-${version}-${arch}-Portable.${ext}"
    }
  }
}
